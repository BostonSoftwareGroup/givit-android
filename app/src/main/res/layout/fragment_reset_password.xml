<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_password_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="app.com.example.android.givit_android.fragments.ResetPasswordFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_margin"
        android:layout_marginTop="@dimen/login_margin"
        android:background="@color/colorWhite"
        android:text="Reset Password"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_margin"
        android:background="@color/colorWhite"
        android:text="@string/reset_password_hint"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <EditText
        style="@style/longRectangle"
        android:hint="@string/default_email_hint"
        android:paddingLeft="@dimen/login_text_padding" />

    <Button
        android:id="@+id/button"
        style="@style/longRectangle"
        android:backgroundTint="@color/colorSignupRed"
        android:text="@string/send_message"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

</LinearLayout>