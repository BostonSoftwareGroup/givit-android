<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="app.com.example.android.givit_android.fragments.ResetPasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/reset_margin_small"
        android:layout_marginTop="@dimen/reset_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/reset_back_arrow_button"
            android:layout_width="@dimen/reset_back_ic_size"
            android:layout_height="@dimen/reset_back_ic_size"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/reset_margin"
            android:text="@string/reset_password_title"
            android:textColor="@color/colorDarkerGrey"
            android:textSize="@dimen/reset_text_size_large" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/reset_margin"
        android:layout_marginTop="@dimen/reset_margin"
        android:paddingLeft="@dimen/reset_padding"
        android:paddingRight="@dimen/reset_padding"
        android:text="@string/reset_password_description"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/reset_text_size" />

    <EditText
        style="@style/longRectangle"
        android:layout_marginBottom="@dimen/reset_margin"
        android:hint="@string/default_email_hint"
        android:paddingLeft="@dimen/login_text_padding" />

    <Button
        android:id="@+id/send_email_button"
        style="@style/longRectangle"
        android:text="@string/send"
        android:textColor="@color/colorMainRed"
        android:textAppearance="@style/buttonTextAppearance" />
</LinearLayout>
